{
  "dashboard": {
    "title": "Ecoeco 13-Node Microservices",
    "tags": ["ecoeco", "13-node", "microservices"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "API Services - Request Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=~\".*-api\"}[5m])) by (service)",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "API Services - Error Rate",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=~\".*-api\",status=~\"5..\"}[5m])) by (service) / sum(rate(http_requests_total{job=~\".*-api\"}[5m])) by (service)",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percentunit", "label": "Error Rate"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "API Services - Response Time (p95)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=~\".*-api\"}[5m])) by (service, le))",
            "legendFormat": "{{service}} p95",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Response Time"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Worker Services - Task Processing Rate",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(celery_task_total[5m])) by (worker)",
            "legendFormat": "{{worker}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Tasks/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Worker Services - Task Failure Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(celery_task_failed_total[5m])) by (worker) / sum(rate(celery_task_total[5m])) by (worker)",
            "legendFormat": "{{worker}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percentunit", "label": "Failure Rate"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "RabbitMQ - Queue Size",
        "type": "graph",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rabbitmq_queue_messages_ready",
            "legendFormat": "{{queue}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Messages"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Node CPU Usage (13 Nodes)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 24, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "(1 - avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m]))) * 100",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU Usage", "max": 100, "min": 0},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "Node Memory Usage (13 Nodes)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 24, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Memory Usage", "max": 100, "min": 0},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "Pod Status by Node",
        "type": "table",
        "gridPos": {"x": 0, "y": 32, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "sum(kube_pod_info) by (node, pod, namespace)",
            "format": "table",
            "refId": "A"
          }
        ]
      },
      {
        "id": 10,
        "title": "API Services - Active Pods",
        "type": "stat",
        "gridPos": {"x": 0, "y": 40, "w": 8, "h": 4},
        "targets": [
          {
            "expr": "count(up{job=~\".*-api\"} == 1)",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "horizontal"
        }
      },
      {
        "id": 11,
        "title": "Worker Services - Active Pods",
        "type": "stat",
        "gridPos": {"x": 8, "y": 40, "w": 8, "h": 4},
        "targets": [
          {
            "expr": "count(up{job=~\".*-worker\"} == 1)",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "horizontal"
        }
      },
      {
        "id": 12,
        "title": "Infrastructure - Active Services",
        "type": "stat",
        "gridPos": {"x": 16, "y": 40, "w": 8, "h": 4},
        "targets": [
          {
            "expr": "count(up{job=~\"rabbitmq|postgresql|redis\"} == 1)",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "horizontal"
        }
      }
    ]
  }
}

