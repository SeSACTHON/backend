OPENAI_API_KEY=local-openai-key

# true → JWT 검증 스킵 (기본값). 실제 인증 흐름을 검증하려면 false 로 전환 후 Auth 스택을 함께 실행하세요.
SCAN_AUTH_DISABLED=true

# Character Reward 기능 (docker-compose 구성에 character-api 컨테이너 포함)
SCAN_REWARD_FEATURE_ENABLED=true
SCAN_CHARACTER_API_BASE_URL=http://character-api:8000
SCAN_CHARACTER_API_TIMEOUT_SECONDS=5.0
SCAN_CHARACTER_API_TOKEN=

# JWT 설정: Auth 서비스와 동일하게 맞추세요. 아래 값은 로컬 기본 예시입니다.
SCAN_JWT_SECRET_KEY=local-scan-secret
SCAN_JWT_ALGORITHM=HS256
SCAN_JWT_ISSUER=sesacthon-auth
SCAN_JWT_AUDIENCE=sesacthon-clients
