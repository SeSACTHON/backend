# Local development environment for docker-compose
# Copy this file to .env.local and fill in your OAuth credentials

AUTH_ENVIRONMENT=local
AUTH_API_V1_PREFIX=/api/v1

# Local docker-compose database connections
AUTH_DATABASE_URL=postgresql+asyncpg://sesacthon:sesacthon@localhost:5433/sesacthon
AUTH_REDIS_BLACKLIST_URL=redis://localhost:6380/0
AUTH_REDIS_OAUTH_STATE_URL=redis://localhost:6380/3

# JWT configuration (use a strong secret in production)
AUTH_JWT_SECRET_KEY=local-dev-secret-key-DO-NOT-USE-IN-PRODUCTION
AUTH_JWT_ALGORITHM=HS256
AUTH_JWT_ISSUER=sesacthon-auth
AUTH_JWT_AUDIENCE=sesacthon-clients
AUTH_ACCESS_TOKEN_EXP_MINUTES=15
AUTH_REFRESH_TOKEN_EXP_MINUTES=20160

# OAuth Configuration (localhost callbacks)
# IMPORTANT: Get your own OAuth credentials from:
# - Google: https://console.cloud.google.com/apis/credentials
# - Kakao: https://developers.kakao.com/console/app
# - Naver: https://developers.naver.com/apps

AUTH_GOOGLE_CLIENT_ID=your-google-client-id-here
AUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret-here
AUTH_GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

AUTH_KAKAO_CLIENT_ID=your-kakao-client-id-here
AUTH_KAKAO_CLIENT_SECRET=
AUTH_KAKAO_REDIRECT_URI=http://localhost:8000/api/v1/auth/kakao/callback

AUTH_NAVER_CLIENT_ID=your-naver-client-id-here
AUTH_NAVER_CLIENT_SECRET=your-naver-client-secret-here
AUTH_NAVER_REDIRECT_URI=http://localhost:8000/api/v1/auth/naver/callback

AUTH_OAUTH_FAILURE_REDIRECT_URL=http://localhost:3000/login?error=auth_failed

